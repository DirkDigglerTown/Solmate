# .env.example
# Copy this file to .env.local and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Solana RPC Configuration
# Get your Helius API key from https://helius.xyz
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-helius-api-key-here

# Optional: Alternative RPC URL (fallback)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Chat Configuration
MAX_MESSAGE_LENGTH=500
MAX_CONVERSATION_SIZE=50
MAX_TOKENS=700
CHAT_TEMPERATURE=0.6

# TTS Configuration  
MAX_TTS_LENGTH=500
MAX_AUDIO_QUEUE_SIZE=10

# Update Intervals (milliseconds)
PRICE_UPDATE_INTERVAL=30000
TPS_UPDATE_INTERVAL=60000

# Network Configuration
SOLANA_NETWORK=mainnet-beta

# Error Tracking (optional)
ERROR_TRACKING_ENABLED=false
ERROR_SAMPLE_RATE=0.1

# Analytics (optional)
ENABLE_ANALYTICS=false

# Development/Production
NODE_ENV=production
VERCEL_ENV=production

# Security
# Add any additional security tokens here
# JWT_SECRET=your-secret-here
