# Solmate Environment Variables
# Copy this file to .env.local and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Helius RPC Configuration
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_helius_api_key_here

# Solana Network Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Chat Configuration
MAX_MESSAGE_LENGTH=500
MAX_CONVERSATION_SIZE=50
MAX_TOKENS=700
CHAT_TEMPERATURE=0.6

# TTS Configuration
MAX_TTS_LENGTH=500

# Update Intervals (milliseconds)
PRICE_UPDATE_INTERVAL=30000
TPS_UPDATE_INTERVAL=60000

# Feature Flags
ENABLE_ANALYTICS=false
ERROR_TRACKING_ENABLED=false
ERROR_SAMPLE_RATE=0.1

# Node Configuration
NODE_ENV=production
